<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Top spacing for system bars -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Modern Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <!-- Professional Logo and Branding -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_minimarketplace_square"
                android:layout_marginEnd="12dp"
                android:contentDescription="MiniMarketplace Logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MiniMarketplace"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belanja mudah &amp; terpercaya"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

        <!-- Cart indicator with badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCartHeader"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/surface"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_shopping_cart"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tvCartBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/bg_badge"
                android:text="0"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="gone" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Welcome Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selamat Datang!"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tvWelcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mari mulai berbelanja hari ini"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:alpha="0.8"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_shopping_bag"
                        app:tint="@color/white"
                        android:alpha="0.3" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Utama"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- First Row of Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Products Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProducts"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:backgroundTint="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            android:backgroundTint="@color/primary_light">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_shopping_bag"
                                android:contentDescription="Products"
                                app:tint="@color/primary" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Produk"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jelajahi koleksi"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Cart Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCart"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:backgroundTint="@color/surface">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                android:backgroundTint="@color/secondary_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_shopping_cart"
                                    android:contentDescription="Cart"
                                    app:tint="@color/secondary" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keranjang"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_marginTop="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lihat belanjaan"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Cart Badge -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardCartBadge"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:backgroundTint="@color/error"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvCartCount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </com.google.android.material.card.MaterialCardView>

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Second Row of Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Profile Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProfile"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:backgroundTint="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            android:backgroundTint="@color/accent_light">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person"
                                android:contentDescription="Profile"
                                app:tint="@color/accent" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profil"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kelola akun"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Order History Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOrderHistory"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:backgroundTint="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            android:backgroundTint="#FFE0B2">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_history"
                                android:contentDescription="Order History"
                                app:tint="@color/warning" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Riwayat"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pesanan Anda"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
